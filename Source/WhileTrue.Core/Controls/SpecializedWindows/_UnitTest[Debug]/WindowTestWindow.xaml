<Controls:Window x:Class="WhileTrue.Controls.SpecializedWindows._UnitTest_Debug_.WindowTestWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:WhileTrue.Controls" mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300" x:Name="Window" Padding="10">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <TextBlock>Padding: </TextBlock>
            <TextBox Text="{Binding Padding,ElementName=Window}" Width="100"/>
        </StackPanel>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Hello, World!</TextBlock>
    </DockPanel>
</Controls:Window>
