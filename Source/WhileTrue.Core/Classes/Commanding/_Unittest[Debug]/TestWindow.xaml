<Window x:Class="WhileTrue.Classes.Commanding._Unittest.TestWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:wt="clr-namespace:WhileTrue.Classes.Commanding" mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="200" SizeToContent="WidthAndHeight">
    <StackPanel>
        <Button Command="{Binding SampleCommand}" CommandParameter="{Binding SampleCommandParameter}">Sample</Button>
        <CheckBox IsChecked="{Binding SampleCommandParameter}">Parameter Value</CheckBox>
        <Label Content="{Binding CommandResult}"/>
    </StackPanel>
</Window>
